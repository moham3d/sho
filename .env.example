# Database Configuration
POSTGRES_DB=radiology_db
POSTGRES_USER=radiology_user
POSTGRES_PASSWORD=secure_password_change_this_in_production
DATABASE_URL=postgresql://radiology_user:secure_password_change_this_in_production@postgres:5432/radiology_db

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Application Configuration
NODE_ENV=development
PORT=3000

# Service Ports
POSTGRES_PORT=5432
POSTGREST_PORT=3000
WEBSOCKET_PORT=3001
FRONTEND_PORT=3002

# Frontend Configuration
REACT_APP_API_URL=http://localhost:3000
REACT_APP_WS_URL=ws://localhost:3001

# SSL Configuration (for production)
SSL_CERT=/path/to/cert.pem
SSL_KEY=/path/to/key.pem

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# File Upload Configuration
MAX_FILE_SIZE=10485760  # 10MB
UPLOAD_DIR=uploads/

# Rate Limiting
RATE_LIMIT_WINDOW=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
CORS_ORIGIN=http://localhost:3002

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30000  # 30 seconds

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30

# WebSocket Configuration
WS_MAX_CONNECTIONS=100
WS_MESSAGE_LIMIT=1024  # 1KB

# Security Configuration
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret-change-this
CORS_CREDENTIALS=true

# Monitoring Configuration
ENABLE_METRICS=true
METRICS_PORT=9090

# Cache Configuration
REDIS_URL=redis://localhost:6379
CACHE_TTL=3600  # 1 hour

# Feature Flags
ENABLE_ARABIC_SUPPORT=true
ENABLE_DIGITAL_SIGNATURES=true
ENABLE_AUDIT_LOGGING=true
ENABLE_REAL_TIME_MONITORING=true

# Development Configuration
DEV_HOT_RELOAD=true
DEV_MOCK_API=false
DEV_SHOW_ERRORS=true