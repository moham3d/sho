<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Nurse Dashboard - Al-Shorouk Radiology Management System</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="/css/custom.css" rel="stylesheet">
    <style>
        .navbar-brand {
            font-weight: 700;
        }
        .navbar-brand i {
            color: #ffffff;
        }
        .navbar-nav .nav-link {
            font-weight: 500;
            transition: color 0.3s ease;
        }
        .navbar-nav .nav-link:hover {
            color: rgba(255, 255, 255, 0.8) !important;
        }
        .navbar-nav .nav-link.active {
            color: #ffffff !important;
            background-color: rgba(255, 255, 255, 0.1);
            border-radius: 5px;
        }
        .user-info {
            font-size: 0.9em;
            color: rgba(255, 255, 255, 0.9);
        }
        .user-role {
            font-weight: 600;
            text-transform: capitalize;
        }
        .logout-btn {
            border: 1px solid rgba(255, 255, 255, 0.3);
            transition: all 0.3s ease;
        }
        .logout-btn:hover {
            background-color: rgba(255, 255, 255, 0.1);
            border-color: rgba(255, 255, 255, 0.5);
        }
        .card {
            border: none;
            border-radius: 12px;
            box-shadow: 0 4px 20px rgba(0,0,0,0.08);
            transition: all 0.3s ease;
        }
        .card:hover {
            transform: translateY(-4px);
            box-shadow: 0 8px 30px rgba(0,0,0,0.12);
        }
        .btn-custom {
            border-radius: 8px;
            padding: 12px 30px;
            font-size: 1.1em;
            font-weight: 600;
        }
        .icon-large {
            font-size: 3em;
            margin-bottom: 15px;
        }
        .card-title {
            font-weight: 600;
            margin-bottom: 10px;
        }
        .stats-card {
            background: linear-gradient(135deg, #34495e 0%, #2c3e50 100%);
            color: white;
        }
        .quick-actions {
            background: #34495e;
            color: white;
        }
    </style>
</head>
<body>
    <!-- Navigation -->
    <%- include('navigation', { currentPage: 'dashboard' }) %>

    <div class="container mt-4">
        <!-- Notification -->
        <% if (notification) { %>
            <div class="alert alert-<%= notification.type === 'success' ? 'success' : 'danger' %> alert-dismissible fade show" role="alert" id="notificationAlert">
                <i class="fas fa-<%= notification.type === 'success' ? 'check-circle' : 'exclamation-triangle' %> me-2"></i>
                <%= notification.message %>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        <% } %>

        <!-- Header -->
        <div class="row mb-4">
            <div class="col-12">
                <div class="text-center">
                    <h1><i class="fas fa-user-nurse me-2 text-info"></i>Nurse Dashboard</h1>
                    <p class="text-muted">Manage patient assessments and visits</p>
                </div>
            </div>
        </div>

        <!-- Quick Actions -->
        <div class="row mb-4">
            <div class="col-12">
                <div class="card quick-actions">
                    <div class="card-body text-center py-4">
                        <h3 class="card-title mb-4">
                            <i class="fas fa-bolt me-2"></i>Quick Actions
                        </h3>
                        <div class="row justify-content-center">
                            <div class="col-md-6">
                                <a href="/nurse/search-patient" class="btn btn-light btn-custom w-100">
                                    <i class="fas fa-search me-2"></i>Start New Assessment
                                    <br><small>Search patient by SSN</small>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Main Features -->
        <div class="row g-4">
            <!-- Patient Search & Assessment -->
            <div class="col-lg-4">
                <div class="card h-100">
                    <div class="card-body text-center">
                        <i class="fas fa-search-plus icon-large text-primary"></i>
                        <h4 class="card-title">Patient Assessment</h4>
                        <p class="card-text text-muted">
                            Search for existing patients by SSN and start a new assessment visit.
                            The system will automatically create a new visit record and redirect you to the assessment form.
                        </p>
                        <a href="/nurse/search-patient" class="btn btn-primary btn-custom">
                            <i class="fas fa-search me-2"></i>Search Patient
                        </a>
                    </div>
                </div>
            </div>

            <!-- Recent Activity -->
            <div class="col-lg-4">
                <div class="card h-100">
                    <div class="card-body text-center">
                        <i class="fas fa-history icon-large text-warning"></i>
                        <h4 class="card-title">Recent Activity</h4>
                        <p class="card-text text-muted">
                            View your recent assessments and patient visits.
                            Track your workflow and access previously started assessments.
                        </p>
                        <button class="btn btn-warning btn-custom" disabled>
                            <i class="fas fa-clock me-2"></i>Coming Soon
                        </button>
                    </div>
                </div>
            </div>

            <!-- Reports & Analytics -->
            <div class="col-lg-4">
                <div class="card h-100">
                    <div class="card-body text-center">
                        <i class="fas fa-chart-bar icon-large text-info"></i>
                        <h4 class="card-title">Reports</h4>
                        <p class="card-text text-muted">
                            Generate reports on your assessments, patient visits,
                            and workflow statistics for quality improvement.
                        </p>
                        <button class="btn btn-info btn-custom" disabled>
                            <i class="fas fa-chart-line me-2"></i>Coming Soon
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <!-- Statistics -->
        <div class="row mt-4">
            <div class="col-12">
                <div class="card stats-card">
                    <div class="card-body">
                        <h4 class="card-title text-center mb-4">
                            <i class="fas fa-chart-pie me-2"></i>Your Statistics
                        </h4>
                        <div class="row text-center">
                            <div class="col-md-3">
                                <h2 class="display-4">0</h2>
                                <p class="mb-0">Today's Assessments</p>
                            </div>
                            <div class="col-md-3">
                                <h2 class="display-4">0</h2>
                                <p class="mb-0">This Week</p>
                            </div>
                            <div class="col-md-3">
                                <h2 class="display-4">0</h2>
                                <p class="mb-0">Active Drafts</p>
                            </div>
                            <div class="col-md-3">
                                <h2 class="display-4">0</h2>
                                <p class="mb-0">Completed This Month</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Help Section -->
        <div class="row mt-4">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">
                            <i class="fas fa-question-circle me-2"></i>Quick Help
                        </h5>
                        <div class="row">
                            <div class="col-md-6">
                                <h6><i class="fas fa-search text-primary me-2"></i>Starting a New Assessment</h6>
                                <ol class="text-muted">
                                    <li>Click "Start New Assessment" to search for a patient</li>
                                    <li>Enter the patient's 14-digit SSN</li>
                                    <li>If patient exists, a new visit is created automatically</li>
                                    <li>Fill out the assessment form</li>
                                    <li>Save as draft or submit when complete</li>
                                </ol>
                            </div>
                            <div class="col-md-6">
                                <h6><i class="fas fa-save text-success me-2"></i>Draft Functionality</h6>
                                <ul class="text-muted">
                                    <li>Save incomplete assessments as drafts</li>
                                    <li>Resume drafts from your dashboard</li>
                                    <li>Drafts are automatically saved every 30 seconds</li>
                                    <li>Submit when assessment is complete</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        // Auto-hide notification after 5 seconds
        document.addEventListener('DOMContentLoaded', function() {
            const notificationAlert = document.getElementById('notificationAlert');
            if (notificationAlert) {
                setTimeout(function() {
                    const alert = new bootstrap.Alert(notificationAlert);
                    alert.close();
                }, 5000); // 5 seconds
            }
        });
    </script>
</body>
</html>